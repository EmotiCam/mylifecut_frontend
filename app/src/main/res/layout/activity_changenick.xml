<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="282dp"
        android:layout_height="359dp"
        android:background="@drawable/layout_show"
        android:gravity="center">


        <EditText
            android:id="@+id/nickname"
            android:layout_width="250dp"
            android:layout_height="76dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:hint="Nickname"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/about_text_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/montserrat_medium_600"
            android:text="Nickname"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="14sp"
            app:fontFamily="@font/montserrat_medium_600" />


        <EditText
            android:id="@+id/comments"
            android:layout_width="247dp"
            android:layout_height="193dp"
            android:layout_alignLeft="@+id/nickname"
            android:layout_alignRight="@+id/nickname"
            android:layout_marginTop="90dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/rectanglebord"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:inputType="textMultiLine"/>

        <TextView
            android:id="@+id/about_text_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/montserrat_medium_600"
            android:text="Comments"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="14sp"
            app:fontFamily="@font/montserrat_medium_600" />

        <Button
            android:id="@+id/next"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignRight="@+id/nickname"
            android:layout_marginTop="290dp"
            android:background="@drawable/ic_checks" />



    </RelativeLayout>

</LinearLayout>